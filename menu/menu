#!/bin/bash
# Main Menu Script

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
BLUE='\033[0;34m'
NC='\033[0m'

show_menu() {
    clear
    echo -e "${BLUE}=============================${NC}"
    echo -e "${YELLOW}     MAIN MENU     ${NC}"
    echo -e "${BLUE}=============================${NC}"
    echo -e ""
    echo -e "${GREEN}1${NC}. SSH Manager"
    echo -e "${GREEN}2${NC}. XRAY Manager"
    echo -e "${GREEN}3${NC}. WebSocket Manager"
    echo -e "${GREEN}4${NC}. Domain Manager"
    echo -e "${GREEN}5${NC}. Backup Manager"
    echo -e "${GREEN}6${NC}. System Monitor"
    echo -e "${GREEN}7${NC}. Limit Manager"
    echo -e "${GREEN}8${NC}. Port Manager"
    echo -e "${GREEN}9${NC}. Theme Manager"
    echo -e "${GREEN}10${NC}. Log Manager"
    echo -e "${GREEN}11${NC}. Speedtest"
    echo -e "${GREEN}0${NC}. Exit"
    echo -e ""
    echo -e "${BLUE}=============================${NC}"
}

while true; do
    show_menu
    read -p "Select option: " choice
    case $choice in
        1) ssh-manager ;;
        2) xray-manager ;;
        3) ws-manager ;;
        4) domain-manager ;;
        5) backup-manager ;;
        6) monitor ;;
        7) limit-manager ;;
        8) port-manager ;;
        9) theme ;;
        10) log ;;
        11) speedtest ;;
        0) break ;;
        *) echo -e "${RED}Invalid option${NC}" ;;
    esac
done 